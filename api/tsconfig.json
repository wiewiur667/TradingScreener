{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "isolatedModules": false,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "importHelpers": true,
    "newLine": "LF",
    "noEmit": true,
    "lib": [
      "es7",
      "dom",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "references": [
    {"path": "../domain"}
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./public",
    "dist",
    "test"
  ],
  "linterOptions": {
    "exclude": []
  }
}
