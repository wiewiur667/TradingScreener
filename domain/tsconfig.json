{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@infrastructure*": ["./infrastructure/*"],
      "@stores*": ["./stores/*"],
      "@services*": ["./services/*"],
      "@plugins*": ["./plugins/*"],
      "@models*": ["./models/*"]
    },
    "lib": [
      "es7",
      "dom",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
}